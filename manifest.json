{
    "manifest_version": 3,
    "name": "Security Violations Logger",
    "version": "1.0",
    "description": "Logs Content Security Policy violations from tabs",
    "permissions": [
      "tabs",
      "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Security Violations Logger"
    }
  }